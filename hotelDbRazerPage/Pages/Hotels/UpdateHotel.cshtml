@page
@model hotelDbRazerPage.Pages.Hotels.UpdateHotelModel
@{
}

<h3>Opdater Hotel Information</h3>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            

            <form method="post">
                <div class="card" style="border: 1px solid #ddd; position: relative; display: flex; flex-direction: column; justify-content: space-between;">
                    <div class="card-body">
                        <h5 class="card-title">Hotel Information</h5>
                        <hr style="border: 1px solid #ddd; margin-top: 5px; margin-bottom: 10px;">

                        <div class="mb-3">
                            <label class="form-label">Hotel Number</label>
                            <input type="text" class="form-control" value="@Model.HotelNr" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hotel Name</label>
                            <input type="text" class="form-control" asp-for="HotelName" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hotel Address</label>
                            <input type="text" class="form-control" asp-for="HotelAddress" />
                        </div>
                    </div>

                    <div class="position-relative" style="height: 60px; margin-top: auto; margin-bottom: 2px;">
                        <div style="position: absolute; top: 50%; left: 0%; width: 100%; transform: translateY(-120%); display: flex; justify-content: space-between; padding: 0 10%;">
                            <!-- Update Button -->
                            <form asp-page-handler="Update" asp-route-updateHotelNr="@Model.HotelNr" method="post">
                                <button type="submit" class="btn btn-primary" style="white-space: nowrap;">Update Hotel</button>
                            </form>

                            <!-- Delete Button -->
                            <form asp-page-handler="Delete" asp-route-deleteHotelNr="@Model.HotelNr" method="post">
                                <button type="submit" class="btn btn-danger" style="white-space: nowrap;">Delete Hotel</button>
                            </form>
                        </div>
                    </div>



                </div>
            </form>






        </div>
    </div>
</div>